$colorRed = #f00
$colorGreen = #008000
$colorOrange = #FFA500

$colorText = $colorBlack

$colorBd = #ddd
$colorBg = #eee

$colorLink = $colorPrimary
$colorHover = $colorSecondary

$colorFacebook = #3b5998
$colorTwitter = #1da1f2
$colorGoogle = #dd4b39
$colorYoutube = #ff0000
$colorLinkedIn = #0077b5
$colorInstagram = #c13584
$colorPinterest = #bd081c

// font
$fontPrimary = Arial, Helvetica, sans-serif
$fontSecondary = $fontPrimary
$fontSize = 14px
$lineHeight = (20/14)

// typography
$typoSpaceVertical = 1.25em

// grid
$gridColumns = 12
$gridGutter = 20px

// row-main
$rowMainWidth = 1280px
$rowMainGutter = $gridGutter

// path
// $img = data.assets.images
// $fonts = data.assets.fonts

// transitions
$t = .3s

// media queries
$mediaQueries = json('../media-queries.json', { hash: true })

$MQ = {}
$breakpoints = ''

for $device, $bp in $mediaQueries.breakpoints
	$MQ[$device + 'Up'] = s('(min-width: %spx)', $bp)
	$MQ[$device + 'Down'] = s('(max-width: %spx)', ($bp - 1))

	push($breakpoints, $device)

shift($breakpoints) // Hack

for $device, $rule in $mediaQueries.rules
	$MQ[$device] = $rule
