.btn
	$s = selector()
	display inline-block
	vertical-align middle
	margin 0
	padding 0
	border 0
	background none
	text-decoration none
	font-family inherit
	&__text
		position relative
		display block
		border 1px solid transparent
		padding 8px 20px
		font-size 1rem
		line-height 20px
		background $colorLink
		color $colorWhite
		text-decoration none
		text-align center
		transition background $t, border-color $t, color $t

	// VARIANTS

	// STATES
	&:disabled
	&.is-disabled
		opacity .5
		pointer-events none

	// hovers
	.no-touchevents &:hover &__text
		background $colorHover
		color #fff
